{
  // auto select the first item
  "suggest.noselect": false,
  // autoformat
  "coc.preferences.formatOnSaveFiletypes": ["go", "markdown", "xml", "json"],
  // snippets
  "snippets.ultisnips.directories": ["ultisnips", "~/.config/nvim/snips"],
  // explorer
  "explorer.width": 30,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit",
    "s": "open:split"
  },
  "list.insertMappings": {
    "<C-r>": "do:refresh",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },

  "list.normalMappings": {},
  "languageserver": {}
}
