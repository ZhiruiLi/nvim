{
  // auto select the first item
  "suggest.noselect": false,
  // autoformat
  "coc.preferences.formatOnSaveFiletypes": ["go", "c", "cpp", "markdown", "xml", "json"],
  // snippets
  "snippets.ultisnips.directories": ["~/.config/nvim/snips"],
  // explorer
  "explorer.width": 30,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "cd", "open"],
    "o": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "S": "open:split",
    "V": "open:vsplit"
  },
  "list.insertMappings": {
    "<C-r>": "do:refresh",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },
  "list.normalMappings": {
    "V": "action:vsplit",
    "S": "action:split",
    "D": "expr:GetDeleteAction"
  },
  "session.directory": "~/.local/share/nvim/sessions",
  "list.source.files.excludePatterns": [
    "**/.git/**", "**/.svn/**", "**/.hg/**",                // Version control
    "**/.cabal-sandbox/**", "**/target/**", "**/dist/**",   // Build
    "*.exe", "*.dll", "*.pyc",                              // Binary
    "*.zip", "*.7z", "*.gz", "*.tar",                       // Compress
    "**/.DS_Store", "Thumbs.db",                            // System
    "**/.idea/**", "**/.clangd/**", "**/.ccls-cache/**"     // IDE
  ],
  "list.source.files.args": ["--hidden", "--files"],
  "languageserver": {}
}
