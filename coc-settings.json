{
  // auto select the first item
  "suggest.noselect": false,
  // autoformat
  "coc.preferences.formatOnSaveFiletypes": ["go", "markdown", "xml", "json"],
  // snippets
  "snippets.ultisnips.directories": ["~/.config/nvim/snips"],
  // explorer
  "explorer.width": 30,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "cd", "open"],
    "o": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "S": "open:split",
    "V": "open:vsplit"
  },
  "list.insertMappings": {
    "<C-r>": "do:refresh",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },
  "list.normalMappings": {
    "V": "action:vsplit",
    "S": "action:split",
    "D": "expr:GetDeleteAction"
  },
  "session.directory": "~/.local/share/nvim/sessions",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  }
}
