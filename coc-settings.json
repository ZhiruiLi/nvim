{
  // auto select the first item
  "suggest.noselect": false,
  // autoformat
  "coc.preferences.formatOnSaveFiletypes": ["go", "c", "cpp", "markdown", "xml", "json"],
  // snippets
  "snippets.ultisnips.directories": ["~/.config/nvim/snips"],
  // explorer
  "explorer.width": 30,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "cd", "open"],
    "o": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "S": "open:split",
    "V": "open:vsplit"
  },
  "list.insertMappings": {
    "<C-r>": "do:refresh",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },
  "list.normalMappings": {
    "V": "action:vsplit",
    "S": "action:split",
    "D": "expr:GetDeleteAction"
  },
  "session.directory": "~/.local/share/nvim/sessions",
  "languageserver": {},
}
